<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/admin.css">

    <title>Админ | Training Athletix</title>
</head>
<body>
{{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
    <div class="main">
        <div class="overlay">
            <div class="navi">
                <nav class="navbar navbar-expand-sm navbar-custom">
                    <!--                    <a href="/" class="navbar-brand">Custom</a>-->
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCustom">
                        <i class="fa fa-bars fa-lg py-1 text-white"></i>
                    </button>
                    <div class="navbar-collapse collapse" id="navbarCustom">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="/">Домашняя</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Индивидуальные занятия</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Групповые занятия</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Программы</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="#">Профиль</a>
                            </li>
                        </ul>
                        <!--                        <span class="ml-auto navbar-text">Text</span>-->
                    </div>
                </nav>
            </div>
            <div class="calendar-form">
                <div class="calendar">
                    <input type="date" id="calendar" name="calendar">
                </div>
                <div class="spinner-border" style="width: 3rem; height: 3rem; display: none" role="status"></div>
                <div class="containerTime">
                    <div class="btn-add"><p>+</p></div>
                </div>
                <div class="btns">
                    <button class="btn-sand">Сохранить</button>
                    <button class="btn-remove">Удалить</button>
                    <button class="btn-edit">Редактировать</button>
                </div>

            </div>

            <div class="containerUl">
                <div class="left">
                    <h2>Тренировки на сегодня:</h2>
                    <ul class="left-ul">
                    </ul>
                </div>
                <div class="right">
                    <h2>Актуальные тренировки:</h2>
                    <ul class="right-ul">
                    </ul>
                </div>
            </div>
        </div>
    </div>


<!-- Modal Window-->
    <div id="myModal" class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Добавление события</h4>
                <button class="close" data-dismiss="modal">х</button>
            </div>
            <div class="modal-body">
                <div class="div-add">
                    <label class="timeLabel" for="time">Время начала первого события</label>
                    <input type="time" id="time" value="09:00">
                    <select class="select">
                        <option value="1">Тренировка</option>
                        <option value="0">Другое</option>
                    </select>
                    <label for="time">Продолжительность события</label>
                    <input type="time" id="timeDuration" value="01:30">
                    <label class="label-info" style="display: none"></label>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" data-dismiss="modal">Отменить</button>
                <button class="btn btn-success" id="btn-success-modal" data-dismiss="modal">Добавить</button>
            </div>
        </div>
    </div>
</div>
<!-- Script -->
    <script src="/js/admin.js"></script>

</body>
</html>